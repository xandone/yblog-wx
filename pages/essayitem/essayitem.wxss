.art-root {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.item-pic {
  width: 220rpx;
  height: 160rpx;
  border-radius: 4%;
}

.content {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.item-content-root {
  height: 90rpx;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 31rpx;
}

.item-content {
  width: 100%;
  color: #666;
  max-lines: 3;
  box-sizing: border-box;
}

.essay-imgs {
  display: flex;
  margin-top: 4px;
}

.essay-imgs image {
  width: 220rpx;
  height: 160rpx;
  border-radius: 4%;
  margin-right: 10rpx;
}