/* pages/details/details.wxss */
page {
  height: 100%;
}

.art-root {
  width: 100%;
  min-height: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  background-color: white;
}

.content-rt {
  font-size: 32rpx;
}

.content-date {
  color: #555;
  font-size: 30rpx;
  text-align: right;
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}

.go-top-icon {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 0;
  z-index: 100;
  background: #ffd04b;
  border-radius: 50%;
  border: 1px solid #cacaca;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0.7
}

.go-top-image {
  width: 50rpx;
  height: auto;
  margin-top: 10rpx
}